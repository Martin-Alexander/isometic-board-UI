<div id="main">
  <div id="sidebar">
    <div><h1 style="color: blue;" id="turnplayer">Player One's Turn</h1></div>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Farms</th>
          <th>Gold</th>
          <th>Bases</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Player One:   </td>
          <td id="player-one-farms">20</td>
          <td id="player-one-reinforcements">5</td>
          <td id="player-one-bases">1</td>
        </tr>
        <tr>
          <td>Player Two:   </td>
          <td id="player-two-farms">20</td>
          <td id="player-two-reinforcements">0</td>
          <td id="player-two-bases">1</td>
        </tr>
      </tbody>
    </table>

    <h2>Controls:</h2>
    <table>
      <tbody>
        <tr>
          <td>Next Turn:</td>
          <td>N</td>
        </tr>
        <tr>
          <td>Toggle reinforcement mode:</td>
          <td>R</td>
        </tr>
        <tr>
          <td>Move all:</td>
          <td>Shift + Click</td>
        </tr>
        <tr>
          <td>Move half:</td>
          <td>Ctrl + Click</td>
        </tr>
        <tr>
          <td>Quick move one:</td>
          <td>Ctrl + Shift + Click</td>
        </tr>
        <tr>
          <td>Train soldier:</td>
          <td>Space</td>
        </tr>
        <tr>
          <td>Train worker:</td>
          <td>W</td>
        </tr>
        <tr>
          <td>Train all:</td>
          <td>Shift + W/S</td>
        </tr>
        <tr>
          <td>Build base:</td>
          <td>B</td>
        </tr>      
        <tr>
          <td>Build farm:</td>
          <td>F</td>
        </tr>
        <tr>
          <td>Delete structure:</td>
          <td>Delete</td>
        </tr>
        <tr>
          <td>Zoom in:</td>
          <td>+</td>
        </tr> 
        <tr>
          <td>Zoom out:</td>
          <td>-</td>
        </tr>
      </tbody>
    </table>
    <h2>Rules</h2>
    <table>
      <tbody>
        <tr>
          <td>Gold per turn</td>
          <td>1 per 4 farms</td>
        </tr>
        <tr>
          <td>Return on stored gold</td>
          <td>1 per 20 stored gold</td>
        </tr>
        <tr>
          <td>Cost of farm</td>
          <td>1 worker</td>
        </tr>
        <tr>
          <td>Cost of base</td>
          <td>1 worker + 1 gold per turn</td>
        </tr>
        <tr>
          <td>Loot from farms</td>
          <td>8 gold</td>
        </tr>
        <tr>
          <td>Loot from bases</td>
          <td>20 gold</td>
        </tr>
      </tbody>
    </table>
  </div>
  <canvas id="canvas"></canvas>
</div>
